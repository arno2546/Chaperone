@model Chaperone.Models.Message

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminDashLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Message</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            Message Body :
            <div class="col-md-10">
                @Html.EditorFor(model => model.Message1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Message1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            To :
            <div class="col-md-10">
                <input type="radio" value="Tourist(s)" id="To" name="To">Tourist(s)<br />
                <input type="radio" value="Guide(s)" id="To" name="To">Guide(s)<br />
                <input type="radio" value="All" id="To" name="To">All<br />
                @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })
            </div>
        </div>

        <center>
            <input type="submit" value="Send" class="btn btn-default" />
        </center>
               
    </div>
}

