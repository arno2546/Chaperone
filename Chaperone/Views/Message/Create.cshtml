@model Chaperone.Models.Message

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminDashLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="container text-lg-center">
    <h4>Message</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-lg-4 col-lg-offset-4">
        <table>
            <tr>
                <td><label>Message Body :</label></td>
                <td>

                    @Html.EditorFor(model => model.Message1, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Message1, "", new { @class = "text-danger" })
                </td>
                </tr>
            </table>
        </div>
            

    <div class="col-lg-4 col-lg-offset-4">
        <table>

        <tr>
            <td>
               <label> To :</label>
            </td>
            <td>
                <input type="radio" value="Tourist(s)" id="To" name="To">Tourist(s)
            </td>
            <td> <input type="radio" value="Guide(s)" id="To" name="To">Guide(s)</td>
            <td> <input type="radio" value="All" id="To" name="To">All</td>
            <td> @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })</td>
        </tr>

        </table>
        <center>
            <input type="submit" value="Send" class="btn btn-default" />
        </center>

    </div>
    </div>
}

