@model Chaperone.Models.Message

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminDashLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="container text-lg-center">

    <h4>Message</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
