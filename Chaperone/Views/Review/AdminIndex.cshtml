@model IEnumerable<Chaperone.Models.Review>

@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_AdminDashLayout.cshtml";
}

<h3>AdminIndex</h3>

<p>

</p>
<h2 style="text-align:center">Reviews</h2>
<h3 style="text-align:center; color:red;font-family:Consolas">@TempData["ReviewMessage"]</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            Review
        </th>
        <th>
            Guide
        </th>
        <th>
            Tourist
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User1.Name)
            </td>
            <td>
            </td>
        </tr>
    }

</table>
